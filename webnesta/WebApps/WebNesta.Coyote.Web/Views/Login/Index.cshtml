@model WebNesta.Coyote.Web.ViewModel.LoginViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<form method="post" autocomplete="off" action="/Login/Index">

    <!--Html.AntiForgeryToken() -->
    <div class="row" style="padding-left: 50px; padding-right: 50px; margin-top: -10px;">
        <label class="titulo">Login</label>
    </div>

    <div class="row m-3">
        <a href="#" class="m-auto ajuda" id="btnAjudaLogin">

            <span>@WebNesta.Coyote.Web.App_GlobalResources.Login.ResourceManager.GetString("label_1")</span><i class="fas fa-question-circle ml-2"></i>
        </a>
    </div>

    <div style="display:none" class="row justify-content-center">

        <a href="/Login/SignIn?provider=google" class="col-5 btn_login_external mr-2">
            <p>Google</p>
            <i class="fab fa-google"></i>
        </a>

        <a href="/Login/SignIn?provider=azure" class="col-5 btn_login_external ml-2">
            <p>AD Azure</p>
            <i class="fab fa-microsoft"></i>
        </a>

    </div>

    <div id="dvLogin" class="row">
        <div id="componentTextboxLogin" class="col-c1">
            <div class="c-left">
                <label>@WebNesta.Coyote.Web.App_GlobalResources.Login.ResourceManager.GetString("label_3"):</label>
            </div>
            <div class="c-right">
                <div class="dxeTextBoxSys dxeTextBox_COYOTE dxeTextBoxDefaultWidthSys">
                    <div class="dxic">
                        <input type="text" id="txtLogin" class="dxeEditArea_COYOTE dxeEditAreaSys" placeholder="Clique Aqui" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="dvPassword" class="row">
        <div id="componentTextboxPassword" class="col-c1">
            <div class="c-left">
                <label class="">@WebNesta.Coyote.Web.App_GlobalResources.Login.ResourceManager.GetString("label_4"):</label>
            </div>
            <div class="c-right">
                <div class="dxeTextBoxSys dxeTextBox_COYOTE dxeTextBoxDefaultWidthSys">
                    <div class="dxic" style="border: none !important;width:100%;">

                        <input type="password" id="txtPassword" class="dxeEditArea_COYOTE dxeEditAreaSys" style="border: none !important;" placeholder="Clique Aqui" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="dvRemember" class="row opts-login" style="margin-top: 5px;">
        <div class="col-6 p-0">
            <label id="lblRemember" class="container" style="font-size: 12px;">
                <input type="checkbox" id="chkRemember" name="remember">
                <span class="checkmark"></span>
                @WebNesta.Coyote.Web.App_GlobalResources.Login.ResourceManager.GetString("label_5")
            </label>
        </div>
        <div class="col-6 p-0" style="font-size: 11px; text-align: right; line-height: 20px;">
            <a href="#" id="btnEsqueciMinhaSenha" class="link_esqueci">@WebNesta.Coyote.Web.App_GlobalResources.Login.ResourceManager.GetString("label_6")</a>
        </div>
    </div>


    <div id="dvMFA" style="display:none" class="row">


        <div class="col-12 pb-2 text-center">
            <p class="instruction" style="margin:unset !important">@WebNesta.Coyote.Web.App_GlobalResources.Login.label_google_1</p>

        </div>
        <div class="col-12 pb-2 text-center">
            <p style="
font-family: 'Gudea-Regular';
    font-style: normal;
    font-weight: 400;
    font-size: 13px;
    line-height: 15px;
    text-align: center;
    color: #959595;
    MARGIN-BOTTOM: 2REM;">
                Por favor, realize o download do app Google<br />
                Authenticator no seu celular e escaneie o código QR abaixo:
                @*WebNesta.Coyote.Web.App_GlobalResources.Login.label_google_2*@
            </p>
            <img id="imgBarcodeImageUrl" src="" />
        </div>
        <div class="col-12 pb-2 text-center">
            <p id="pSetupCode"
               style="    width: auto;
    font-family: 'Gudea-Regular';
    font-style: normal;
    font-weight: 400;
    font-size: 13px;
    line-height: 23px;
    color: #959595;
    MARGIN-BOTTOM: 2REM;">
                @WebNesta.Coyote.Web.App_GlobalResources.Login.label_google_3
            </p>
        </div>


        <div style="width: 431.33px" class="col-c1">
            <div class="c-left">
                <label class="">@WebNesta.Coyote.Web.App_GlobalResources.Login.label_google_4</label>
            </div>
            <div class="c-right">
                <div class="dxeTextBoxSys dxeTextBox_COYOTE dxeTextBoxDefaultWidthSys">
                    <div class="dxic">
                        <input type="text" id="txtSecuriyCode" class="dxeEditArea_COYOTE dxeEditAreaSys" placeholder="Clique aqui" />
                    </div>
                </div>
            </div>
        </div>
        <input type="hidden" id="hfUserUniqueKey" name="hfUserUniqueKey" />
    </div>

    <div id="dvCaptcha" style="display:none" class="row">
        <div class="col-12" style="text-align: center;">
            <img src="~/img/refresh.png" style="cursor:pointer" id="lkbRefreshCaptcha" />
        </div>
        <div id="dvCaptchaWords" style="text-align:center" class="col-12">
            <div id="imgCaptcha"></div>
        </div>
        <div class="col-c1">
            <div class="c-left">
                <label>Digite o código acima</label>
            </div>
            <div class="c-right">
                <div class="dxeTextBoxSys dxeTextBox_COYOTE dxeTextBoxDefaultWidthSys">
                    <div class="dxic">
                        <input type="text" id="txtCaptcha" class="dxeEditArea_COYOTE dxeEditAreaSys" placeholder="Clique aqui:" />
                        <input type="hidden" id="hfCatpchaCodeKey" />
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-12 text-center">
            <input type="button" class="btn_login text-center" name="btnLogin" value="Entrar" id="btnLogin" />
            <input type="button" style="display:none;margin: 3% 25PX 3% 0%;" class="btn_login text-center" name="btnEntraCaptcha" value="Entrar" id="btnEntraCaptcha" />
            <input type="button" style="display:none;" class="btn_login text-center" name="btnCancelarCaptcha" value="Cancelar" id="btnCancelarCaptcha" />
            <input type="button" style="display:none;margin: 3% 25PX 3% 0%;" class="btn_login text-center" name="Entrar" value="Entrar" id="btnValidaGoogleAuth" />
            <input type="button" style="display:none;" class="btn_login text-center" name="btnCancelarGoogleAuth" value="Cancelar" id="btnCancelarGoogleAuth" />
        </div>
    </div>

</form>