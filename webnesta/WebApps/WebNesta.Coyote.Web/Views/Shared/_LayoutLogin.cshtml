    <div id="dvLoading" class="loading">
        <img src="/img/loading.gif" alt=""
             style="left: 45%;top: 30%;position: absolute;width: 10%;" />
    </div>
    <!-- Modal -->
    <div class="modal fade" id="myModal" style="z-index:999999999999999999999999999 !important" role="dialog">
        <div class="modal-dialog ">

            <div id="dvModalSuccess" style="display:none" class="modal-content popupAlertaFeedback">


                <div class="modal-header border-0 p-0 pr-2">
                    <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body" style="top: -1vh; left: 0;">
                    <div class="row">
                        <div class="col-2">
                            <i class="fas fa-check-circle sucesso"></i>
                        </div>
                        <div class="col-10">
                            <p id="dvModalTitleSuccess" class="popupAlertaFeedback" style="font-size: 30px; font-weight: bold;">
                                @WebNesta.Coyote.Web.App_GlobalResources.GlobalResource.ResourceManager.GetString("alert_success") !
                            </p>
                            <p id="dvModalMessageSuccess" class="popupAlertaFeedback"></p>
                        </div>
                    </div>
                </div>
            </div>

            <div id="dvModalError" style="display:none" class="modal-content popupAlertaFeedback erro">
                <div class="modal-header border-0 p-0 pr-2">
                    <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body" style="top: -1vh; left: 0;">
                    <div class="row">
                        <div class="col-2">
                            <i class="fas fa-times-circle erro"></i>
                        </div>
                        <div class="col-10">
                            <p id="dvModalTitleError" class="popupAlertaFeedback" style="font-size: 30px; font-weight: bold;">Oops</p>
                            <p id="dvModalMessageError" class="popupAlertaFeedback"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="modal fade" id="modalRecoveryPassword"  style="z-index:999999 !important" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content popupRecoveryPassword" style="width:952px;height:824px">

                <div class="modal-header border-0 p-0 pr-2">
                    <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body" style="top: -1vh; left: 0;">
                    <div class="row">
                        <div class="col-12">
                            <p class="popupRecoveryPassword" style="font-size: 30px; font-weight: bold;text-align:center">
                                Recuperação de senha
                            </p>
                         
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-center"> @*style="text-align:center;"*@
                            <p class="popupRecoveryPasswordDescription" style="width:100%">
                                Insira seu e-mail para a <br />recuperar sua senha:
                            </p> 
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-c1">
                            <div class="c-right">
                                <div class="dxeTextBoxSys dxeTextBox_COYOTE dxeTextBoxDefaultWidthSys" style="border: none !important;">
                                    <div class="dxic" style="border: none !important;width:100%;">
                                        <input type="text" id="txtEmailRecuperarSenha" class="dxeEditArea_COYOTE dxeEditAreaSys" style="border: none !important;" placeholder=" Clique Aqui" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-center">

                            <input type="button" class="btn_login text-center" name="btnRecuperarSenha" value="Recuperar" id="btnRecuperarSenha" />
                            <input type="button" class="btn_login text-center" name="btnCancelarRecuperarSenha" value="Cancelar" id="btnCancelarRecuperarSenha" />
                               
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
